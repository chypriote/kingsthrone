{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "name": "Challenge"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "cid": {
      "type": "uid"
    },
    "type": {
      "type": "integer"
    },
    "start": {
      "type": "date"
    },
    "end": {
      "type": "date"
    },
    "alliance": {
      "type": "boolean",
      "default": false
    },
    "title": {
      "type": "string"
    },
    "challenge_rewards": {
      "via": "challenge",
      "collection": "challenge-reward"
    },
    "challenge_progresses": {
      "via": "challenge",
      "collection": "challenge-progress"
    }
  }
}
